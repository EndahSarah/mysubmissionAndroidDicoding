<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:https="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".About">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#127706"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_url"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/me"
            https:civ_circle_background_color="#8BC34A" />

        <TextView
            android:id="@+id/tv_about_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Endah Sarah Wanty"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_about_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="endahsarahwanty13@gmail.com"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="23sp" />
    </LinearLayout>
</RelativeLayout>